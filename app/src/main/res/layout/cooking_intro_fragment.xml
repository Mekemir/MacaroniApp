<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.game.macaroniapp.bindings.ViewBindings.LayoutManagers" />

        <variable
            name="data"
            type="com.game.macaroniapp.ui.cooking.intro.CookingIntroViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cookingIntro"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/cooking_intro_back"
    tools:background="@drawable/cooking_back_further">

    <ImageView
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_home_btn"
        android:paddingTop="25dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:background="@drawable/start_cooking_header"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/getStartedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/get_started"
        android:paddingBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone"/>

    <ImageView
        android:id="@+id/manIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="-20dp"
        android:src="@drawable/man"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/categoryHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <ImageView
            android:id="@+id/arrowLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"/>

        <TextView
            android:id="@+id/category"
            android:layout_width="200dp"
            android:height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="pasta"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/handleefont"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/macaroniAdapter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:adapter="@{data.adapter}"
        app:layoutManager="@{LayoutManagers.GRID_LAYOUT_MANAGER}"
        tools:itemCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryHolder"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/choosenItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="#99000000"
        android:visibility="gone">

        <ImageView
            android:id="@+id/choosenItemImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingBottom="40dp"
            android:layout_marginBottom="60dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/bottles"
            android:src="@drawable/spagheti_carbonara"/>

        <ImageView
            android:id="@+id/bottles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bottles"
            android:paddingBottom="105dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/startChoosenBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/get_started"
            android:paddingBottom="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:visibility="visible"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>